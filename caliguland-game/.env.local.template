# Jeju L3 Localnet Configuration for Caliguland Game
# Copy this file to .env.local and update with your deployed contract addresses

# ============================================================================
# Network Configuration
# ============================================================================

# Chain ID for localnet
NEXT_PUBLIC_CHAIN_ID=420691

# RPC endpoint
NEXT_PUBLIC_RPC_URL=http://localhost:8545

# Block explorer (optional for localnet)
# NEXT_PUBLIC_EXPLORER_URL=

# ============================================================================
# Contract Addresses (UPDATE AFTER DEPLOYMENT)
# ============================================================================

# PredictionOracle contract
# Deploy from: apps/caliguland/contracts/src/PredictionOracle.sol
NEXT_PUBLIC_PREDICTION_ORACLE_ADDRESS=DEPLOY_REQUIRED

# JejuMarket contract
# Deploy from: contracts/src/prediction-markets/JejuMarket.sol
NEXT_PUBLIC_JEJU_MARKET_ADDRESS=DEPLOY_REQUIRED

# ElizaOS Token contract
# Deploy with: forge script DeployLocalnet.s.sol
NEXT_PUBLIC_ELIZA_TOKEN_ADDRESS=DEPLOY_REQUIRED

# Uniswap V4 PoolManager
# Deploy with: bun run scripts/deploy-uniswap-v4.ts
NEXT_PUBLIC_UNISWAP_V4_POOL_MANAGER=DEPLOY_REQUIRED

# L2 Standard WETH (OP Stack predeploy)
NEXT_PUBLIC_WETH_ADDRESS=0x4200000000000000000000000000000000000006

# ============================================================================
# Development Accounts
# ============================================================================

# Default anvil deployer (has all contract ownership)
NEXT_PUBLIC_DEPLOYER_ADDRESS=0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266

# Test user accounts (pre-funded in anvil)
NEXT_PUBLIC_TEST_USER_1=0x70997970C51812dc3A010C7d01b50e0d17dc79C8
NEXT_PUBLIC_TEST_USER_2=0x3C44CdDdB6a900fa2b585dd299e03d12FA4293BC

# ============================================================================
# Application Settings
# ============================================================================

# Environment
NEXT_PUBLIC_ENV=localnet

# API endpoints (if needed)
# NEXT_PUBLIC_API_URL=http://localhost:3001

# Indexer endpoint (if using)
# NEXT_PUBLIC_INDEXER_URL=http://localhost:4350

# ============================================================================
# Feature Flags
# ============================================================================

# Enable debug mode
NEXT_PUBLIC_DEBUG=true

# Enable testnet features
NEXT_PUBLIC_TESTNET=true

# ============================================================================
# Game-Specific Settings
# ============================================================================

# Default game parameters
NEXT_PUBLIC_DEFAULT_GAME_DURATION=300
NEXT_PUBLIC_MIN_BET_AMOUNT=1000000000000000000
NEXT_PUBLIC_MAX_BET_AMOUNT=1000000000000000000000

# ============================================================================
# Notes
# ============================================================================
#
# After deploying contracts:
# 1. Copy this file to .env.local
# 2. Update all DEPLOY_REQUIRED values with actual addresses
# 3. Restart your development server
#
# To get deployed addresses:
# - Check localnet-config.json in project root
# - Or query contracts/deployments/uniswap-v4-420691.json
#
