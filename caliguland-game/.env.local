# Caliguland Game Configuration - Localnet

# ===========================================
# Blockchain Configuration
# ===========================================

# Enable/disable blockchain integration
ENABLE_BLOCKCHAIN=true

# Localnet RPC endpoint (Anvil/Foundry)
RPC_URL=http://localhost:8545

# Chain ID for localnet
CHAIN_ID=31337

# Private key for game server (Anvil test account #9)
# WARNING: This is a test key - NEVER use in production!
PRIVATE_KEY=0x2a871d0798f97d79848a013d4936a73bf4cc922c825d33c1cf7073dff6d409c6

# ===========================================
# Deployed Contract Addresses
# ===========================================
# These should be updated after deploying contracts to localnet
# Check /Users/shawwalters/jeju/contracts/deployments/ for actual addresses

# JejuMarket - Prediction market with LMSR
JEJU_MARKET_ADDRESS=0x4A679253410272dd5232B3Ff7cF5dbB88f295319

# ElizaOS Token - ERC20 token for betting
ELIZA_TOKEN_ADDRESS=0xe7f1725E7734CE288F8367e1Bb143E90bb3F0512

# PredictionOracle - TEE-attested game outcomes
PREDICTION_ORACLE_ADDRESS=0xa85233C63b9Ee964Add6F2cffe00Fd84eb32338f

# ReputationRegistry - ERC-8004 reputation system
REPUTATION_REGISTRY_ADDRESS=0xa513E6E4b8f2a923D98304ec87F64353C4D5C853

# ===========================================
# Game Configuration
# ===========================================

# Game duration in seconds (default: 1800 = 30 minutes)
GAME_DURATION=1800

# Minimum players to start game
MIN_PLAYERS=2

# Maximum players per game
MAX_PLAYERS=20

# Starting token balance for testing (in ELIZA)
STARTING_BALANCE=1000

# ===========================================
# Server Configuration
# ===========================================

# HTTP server port
PORT=3000

# WebSocket server port
WEBSOCKET_PORT=3001

# Enable CORS (for browser clients)
ENABLE_CORS=true

# ===========================================
# Feature Flags
# ===========================================

# Enable NPC AI (requires OpenAI/Claude API key)
ENABLE_NPC_AI=false

# Enable TEE attestation (requires Dstack)
ENABLE_TEE=true

# Enable verbose logging
DEBUG=false

# ===========================================
# Testing
# ===========================================

# Run in fast mode for testing (shorter game duration)
TEST_MODE=false

# Auto-fund test accounts with ELIZA tokens
AUTO_FUND_ACCOUNTS=true
